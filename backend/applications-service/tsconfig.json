{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "outDir": ".build",
    "rootDir": "./",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "lib": ["es2018"],
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".serverless", ".build"]
} 